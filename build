#!/bin/bash 

for f in `ls src`; do
    echo "[+] compiling ./pipes for '$f'"
    gcc -g src/$f -o pipes
    if [[ ! "$?" -eq "0" ]]; then
        echo "[-] compilation failed"
        continue
    fi

    echo "[+] ./pipes"
    ./pipes
    RET="$?"
    if [[ ! "$RET" -eq "0" ]]; then 
        echo "[-] execution failed ($RET)"
    fi

    echo "[+] removing ./pipes"
    rm pipes

    echo "=== [/test src/$f] ====================="
    echo ""
done
